{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build --workspace=demo",
    "watchPatterns": [
      "demo/**"
    ]
  },
  "deploy": {
    "startCommand": "npm run start --workspace=demo",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
